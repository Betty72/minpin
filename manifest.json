{
  "name": "redir-ext",
  "description": "Redirects calls to kambi-bootstrap.js from one url to another",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*kambi-bootstrap.js*"
  ],
  "page_action": {
    "default_title": "redir-ext",
    "default_popup": "src/options/options.html",
    "default_icon": "src/images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "run_at": "document_idle",
      "js": ["src/content/injector.js"]
    }
  ],
  "web_accessible_resources": ["src/content/content.js"]
}
